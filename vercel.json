{
  "buildCommand": "npm install && npm run build",
  "installCommand": "npm install --prefer-offline --no-audit",
  "functions": {
    "app/api/collect/related/route.ts": {
      "maxDuration": 300
    },
    "app/api/collect/docs/route.ts": {
      "maxDuration": 300
    },
    "app/api/export/csv/route.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/collect/related",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/collect/docs", 
      "schedule": "0 21 * * *"
    }
  ]
}
